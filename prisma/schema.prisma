generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Client {
  id        String      @id @default(uuid())
  name      String
  phone     String
  services  String
  status    String   @default("pending")
  total     Float    @default(0.0)
  createdAt DateTime @default(now())
}

model Transaction {
  id        String      @id @default(uuid())
  clientId  Int
  value     Float
  date      DateTime @default(now())
}

model Services {
  id  String @id @default(uuid())
  service String
  value Float

}